

<h1>Comments</h1>

<table class="table">
  <thead>
    <tr>
      <th>Message</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @comments.each do |comment| %>
      <tr>
        <td><%= comment.message %></td>
        <td><%= link_to 'Show', course_comment_path(@course, comment) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to 'New Comment', new_course_comment_path(@course) %>
